{
  "rules": {
    "transcripts": {
      ".read": true,
      "public": {
        ".read": true,
        ".write": false,
        "$category": {
          "metadata": {
            "$videoId": {
              ".indexOn": [ "publish_date" ]
            }
          }
        }
      },
      "private": {
        ".read": false,
        ".write": false
      }
    }
  }
}
