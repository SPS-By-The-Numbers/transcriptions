{
  "functions": [
    {
      "runtime": "nodejs20",
      "source": "functions",
      "codebase": "functions",
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint"
      ]
    },
    {
      "codebase": "functions-python",
      "source": "functions-python"
    }
  ],
  "hosting": {
    "site": "transcripts-spsbtn",
    "source": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "frameworksBackend": {
      "region": "us-west1"
    }
  },
  "storage": {
    "rules": "storage.rules"
  },
  "database": {
    "rules": "database.rules.json"
  }
}
