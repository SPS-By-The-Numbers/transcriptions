{
  "compilerOptions": {
    "paths": {
      "common/*": ["../common/*"],
      "config/*": ["../config/*"],
      "utils/*": ["./src/utils/*"]
    },
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "moduleDetection": "force",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": false,
    "strictNullChecks": true,
    "target": "esnext",
    "lib": ["esnext"]
  },
  "compileOnSave": true,
  "include": [
    "src/**/*.ts",
    "../common/**/*.ts"
  ]
}
