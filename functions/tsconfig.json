{
  "compilerOptions": {
    "module": "esnext",
    "paths": {
      "common/*": ["../common/*"],
      "config/*": ["../config/*"],
      "utils/*": ["./src/utils/*"]
    },
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": false,
    "target": "es2017"
  },
  "compileOnSave": true,
  "include": [
    "src/**/*.ts",
    "../common/**/*.ts"
  ]
}
