{
  "compilerOptions": {
    "allowJs": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": false,
    "strictNullChecks": true,
    "target": "esnext",
    "lib": ["esnext"]
  },
  "compileOnSave": true,
  "include": [
    "src/**/*.ts",
    "../common/**/*.ts"
  ]
}
